@model IEnumerable<PetHome.Models.ViewModels.FoundPets.FoundPetVM>

@{
    ViewBag.Title = "Found Pets";
}

<h2>Lost Pets</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.AnimalType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Breed)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastSeenLocation)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastSeenTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ThumbnailUrl)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AnimalType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Breed)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastSeenLocation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastSeenTime)
            </td>
            <td>
                <img src="@item.ThumbnailUrl" />
            </td>
            <td>
                @if (User.Identity.Name == item.AssociatedUsername || User.IsInRole("Admin"))
                {
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id });
                    @: |
                    @Html.ActionLink("Delete", "ConfirmDelete", new { id = item.Id })
                    @: |
                }
                @Html.ActionLink("Details", "Details", new { id = item.Id }) 
               
            </td>
        </tr>
    }

</table>
