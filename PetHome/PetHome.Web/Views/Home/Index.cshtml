@model PetHome.Models.ViewModels.Home.HomeIndexVM
@{
    ViewBag.Title = "Home Page";
}


@section Styles{
    <link rel="stylesheet" type="text/css" href="~/Content/slick.css">
    <link rel="stylesheet" type="text/css" href="~/Content/slick-theme.css">
}
<div class="bg-faded p-4 my-4">
    <!-- Image Carousel -->
    <!-- Welcome Message -->
    <div class="text-center mt-4">
        <div class="text-heading text-muted text-lg">Welcome To</div>
        <h1 class="my-2">Pet-Home</h1>
        @*<div class="text-heading text-muted text-lg"> <strong> </strong></div>*@
    </div>
</div>

<div class="bg-faded p-4 my-4">
    <hr class="divider">
    <h2 class="text-center text-lg text-uppercase my-0">Recently <strong>lost</strong> pets</h2>
    <hr class="divider">



    <section class="center slider">

        @foreach (var item in Model.LostPets)
        {
            <div>
                <a href="/lostpets/details/@item.Id">
                    <div class="slide-container">
                        <img src="@item.ThumbnailUrl" alt="@item.Name avatar" class="slide-image">
                        <div class="slide-middle">
                            <div class="slide-text">@item.Name</div>
                        </div>
                    </div>
                </a>
            </div>
        }
       
    </section>

</div>
<div class="bg-faded p-4 my-4">
    <hr class="divider">
    <h2 class="text-center text-lg text-uppercase my-0">Recently <strong>found</strong> pets</h2>
    <hr class="divider">
   
    <section class="center slider">


        @foreach (var item in Model.FoundPets)
        {
            <div>
                <a href="/foundpets/details/@item.Id">
                    <div class="slide-container">
                        <img src="@item.ThumbnailUrl" alt="@item.Breed avatar" class="slide-image">
                        <div class="slide-middle">
                            <div class="slide-text"><span>Location: <br />@item.LastSeenLocation</span></div>
                        </div>
                    </div>
                </a>
            </div>
        }
    </section>
</div>






@section Scripts {
    <script src="https://code.jquery.com/jquery-2.2.0.min.js" type="text/javascript"></script>
    <script src="~/Scripts/slick.js" type="text/javascript" charset="utf-8"></script>
    <script type="text/javascript">
        $(document).on('ready', function () {
            $(".regular").slick({
                dots: true,
                infinite: true,
                slidesToShow: 3,
                slidesToScroll: 3
            });
            $(".center").slick({
                dots: true,
                infinite: true,
                centerMode: true,
                slidesToShow: 3,
                slidesToScroll: 3
            });
            $(".variable").slick({
                dots: true,
                infinite: true,
                variableWidth: true
            });
        });
    </script>
}