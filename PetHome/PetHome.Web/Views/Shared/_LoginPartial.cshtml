@model PetHome.Models.ViewModels.Home.NavBarUserVM
@if (Request.IsAuthenticated)
{

    <ul class="nav navbar-nav navbar-left nav-item px-lg-4 ">
        <li class="dropdown nav-item px-lg-4 ">
          
            <a href="#" class="dropdown-toggle text-uppercase text-expanded" data-toggle="dropdown">
                <span class="glyphicon glyphicon-user text-uppercase text-expanded"></span>
                <strong>@Model.Name</strong>
                <span class="glyphicon glyphicon-chevron-down"></span>
            </a>
            <ul class="dropdown-menu">
                <li>
                    <div class="navbar-login">
                        <div class="row">
                            <div class="col-lg-4">
                                <p class="text-center">
                                    <span class="glyphicon glyphicon-user icon-size"></span>
                                </p>
                            </div>
                            <div class="col-lg-8">
                                <p class="text-left"><strong>@Model.Name @Model.Surname</strong></p>
                                <p class="text-left small">@Model.Email</p>
                                <p class="text-left">
                                    <a href="/users/profile" class="btn btn-primary btn-block btn-sm">Profile</a>
                                </p>
                                @if (User.IsInRole("Admin"))
                                {
                                    <p class="text-left">
                                        <a href="/Admin/AdminPanel" class="btn btn-outline-info btn-block btn-sm">Admin Panel</a>
                                    </p>
                                }

                            </div>
                        </div>
                    </div>
                </li>
                <li class="divider"></li>
                <li>
                    <div class="navbar-login navbar-login-session">
                        <div class="row">
                            <div class="col-lg-12">
                                <p>
                                    @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "" }))
                                    {
                                        @Html.AntiForgeryToken();
                                        <a href="javascript:document.getElementById('logoutForm').submit()" class="btn btn-danger btn-block">Logout</a>
                                    }

                                </p>
                            </div>
                        </div>
                    </div>
                </li>
            </ul>
        </li>
    </ul>


}
else
{

    <ul class="nav navbar-nav navbar-left nav-item px-lg-4 ">
        <li class="dropdown nav-item px-lg-4 ">

            <a href="#" class="dropdown-toggle text-uppercase text-expanded" data-toggle="dropdown">
                <span class="glyphicon glyphicon-user text-uppercase text-expanded"></span>
                <strong>Nombre</strong>
                <span class="glyphicon glyphicon-chevron-down"></span>
            </a>
            <ul class="dropdown-menu">
                <li>
                    <div class="navbar-login navbar-login-session">
                        <div class="row">
                            <div class="col-lg-12">
                                <p>
                                   @Html.ActionLink("Log in", "Login", "Account", routeValues: new { area = "" }, htmlAttributes: new { id = "loginLink", @class = "btn btn-danger btn-block" })
                                </p>
                            </div>
                        </div>
                    </div>
                </li>
                <li>
                    <div class="navbar-login navbar-login-session">
                        <div class="row">
                            <div class="col-lg-12">
                                <p>
                                    @Html.ActionLink("Register", "Register", "Account", routeValues: new { area = "" }, htmlAttributes: new { id = "registerLink", @class = "btn btn-danger btn-block" })
                                </p>
                            </div>
                        </div>
                    </div>
                </li>
            </ul>
        </li>
    </ul>

    @*<ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink", @class = "btn btn-danger btn-block" })</li>
        <li>@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink", @class = "btn btn-danger btn-block" })</li>
    </ul>*@
}
